<launch>
  <node type="core_control" pkg="control" name="control_core" output="screen">
    <param name="control_p_gain" value="1.0"/>
    <param name="control_d_gain" value="0.7"/>
    <param name="control_soft_gain" value="0.1"/>
    <param name="waypoint_proximity_range" value="3"/>
    <param name="waypoint_lookahead_range" value = "1"/>
    <param name="waypoint_heading_error_range" value="1.5707963"/>
    <param name="debug" value="true"/>
  </node>

  <node type="waypoint_rviz_visualizer.py" pkg="control" name="virtual_donut_node" output="screen">
    <!-- callback time interval -->
    <param name="callback_interval" value="0.025" />
    <!-- point density desired for the donut waypoint visualizer -->
    <param name="point_density" value="300" />
    <param name="msg_scale" value="0.05" />
    
    <param name="inner_donut_r" value="1" />
    <param name="inner_donut_g" value="0.5" />
    <param name="inner_donut_b" value="0.5" />
    <param name="inner_donut_a" value="1" />

    <param name="outer_donut_r" value="1" />
    <param name="outer_donut_g" value="0" />
    <param name="outer_donut_b" value="0" />
    <param name="outer_donut_a" value="1" />
  </node>

  <!-- <node type="can_control_adapter.py" pkg="control" name="can_controller" output="screen">
  </node> -->

  <!-- Commented out because this is for red car-->
  <!--node pkg="rosserial_python" type="serial_node.py" name="serial_node">
    <param name="port" value="/dev/ttyACM0"/>
    <param name="baud" value="115200"/>
  </node-->   
</launch>
